<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hopapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HopApp">
        <activity
            android:name=".Reward"
            android:theme="@style/Reward" />
        <activity android:name=".lists.challengesList" />
        <activity android:name=".lists.anxietyList" />
        <activity android:name=".lists.exerciseList" />
        <activity android:name=".CategoryPage" />
        <activity android:name=".Pre_Poll" />
        <activity android:name=".Settings" />
        <activity android:name=".Calendar" />
        <activity
            android:name=".TaskViewActivity"
            android:label="Details"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lists.improvementsList" />
    </application>

</manifest>